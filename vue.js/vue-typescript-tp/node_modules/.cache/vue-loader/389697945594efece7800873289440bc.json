to-focus\n              />\n            </div>\n          </div>\n          <div>\n            <show\n              v-for=\"show in filteredCardsByTitle\"\n              :key=\"show.id\"\n              :id=\"show.id\"\n              :title=\"show.title\"\n              :description=\"show.description\"\n              :image=\"show.urlImage\"\n              :created-in=\"show.createdIn\"\n              :number-of-seasons=\"show.numberOfSeasons\"\n              :status=\"show.status\"\n              :genres=\"show.genres\"\n              :isFavorite=\"show.isFavorite\"\n              @emit-favorite=\"toogleIsFavorite(show.id)\"\n            >\n            </show>\n          </div>\n        </div>\n      </div>\n    </section>\n  </div>\n</template>\n\n<script lang=\"ts\">\nimport { Component, Vue } from \"vue-property-decorator\";\n// @ is an alias to /src\nimport Show from \"@/components/Show.vue\";\nimport { ShowI } from \"@/types/ShowI\";\nimport AutoFocus from \"@/directives/AutoFocusDirectives\";\nimport ShowsService from \"@/services/ShowsService\";\n\n@Component({\n  components: {\n    Show\n  },\n  directives: {\n    AutoFocus\n  }\n})\nexport default class HomeComponent extends Vue {\n  titlePage = \"My TV show\";\n  searchQuery = \"\";\n  validationSearchQuery = \"\";\n  shows: ShowI[] = [];\n\n  mounted(): void {\n    this.shows = ShowsService.getAll();\n  }\n\n  validatedSearchQuery(): void {\n    this.searchQuery = this.validationSearchQuery;\n  }\n\n  toogleIsFavorite(showId: number): void {\n    this.shows.forEach(show => {\n      if (show.id === showId) {\n        show.isFavorite = !show.isFavorite;\n      }\n    });\n  }\n\n  get filteredCardsByTitle(): ShowI[] {\n    return this.shows.filter(show => {\n      return show.title\n        .toLocaleUpperCase()\n        .includes(this.searchQuery.toLocaleUpperCase());\n    });\n  }\n}\n</script>\n\n<style>\n.navbar-item.is-active {\n  color: #00d1b2 !important;\n}\n\n.card-result {\n  margin-bottom: 20px;\n}\n\n.is-128x200 {\n  height: 200px;\n  width: 128px;\n}\n\n.is-favorite {\n  color: #ffdd57;\n}\n</style>\n"]}]}